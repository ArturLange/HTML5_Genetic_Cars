{
  "env": { },
  "plugins": [],
  "extends": [
    "airbnb"
  ],
  "globals": {
    "Promise": true,
    "require": true,
    "Set": true,
    "Map": true,
    "setTimeout": true,
    "clearTimeout": true,
    "setInterval": true,
    "clearInterval": true,
    "setImmediate": true,
    "__dirname": true,
    "global": true,
    "module": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "impliedStrict": true
  },
  "rules": {
    "no-use-before-define": ["error", { "functions": true, "classes": true }],
    "no-mixed-spaces-and-tabs": "error",
    "no-console": "warn",
    "no-plusplus": "off",
    "no-param-reassign": "warn",
    "indent": ["error", 4]
  }
}
